{
    "openapi": "3.0.2",
    "info": {
        "title": "Laravel",
        "description": "first api docs",
        "version": "0.0.1"
    },
    "servers": [
        {
            "url": "localhost",
            "description": "my server"
        }
    ],
    "paths": {
        "\/api\/pages": {
            "get": {
                "tags": [
                    "pages"
                ],
                "summary": "Display a listing of the resource",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#\/components\/schemas\/Page"
                                            }
                                        },
                                        "links": {
                                            "$ref": "#\/components\/schemas\/PaginatorLinks"
                                        },
                                        "meta": {
                                            "$ref": "#\/components\/schemas\/PaginatorMeta"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "\/api\/pages\/{page}": {
            "get": {
                "tags": [
                    "pages"
                ],
                "summary": "Display the specified resource",
                "parameters": [
                    {
                        "name": "page",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#\/components\/schemas\/Page"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not found"
                    }
                }
            }
        },
        "\/api\/news": {
            "get": {
                "tags": [
                    "news"
                ],
                "summary": "Display a listing of the resource",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#\/components\/schemas\/News"
                                            }
                                        },
                                        "links": {
                                            "$ref": "#\/components\/schemas\/PaginatorLinks"
                                        },
                                        "meta": {
                                            "$ref": "#\/components\/schemas\/PaginatorMeta"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "\/api\/news\/{news}": {
            "get": {
                "tags": [
                    "news"
                ],
                "summary": "Display the specified resource",
                "parameters": [
                    {
                        "name": "news",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#\/components\/schemas\/News"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not found"
                    }
                }
            }
        },
        "\/api\/appeal": {
            "post": {
                "tags": [
                    "appeals"
                ],
                "summary": "Send appeal",
                "requestBody": {
                    "description": "Store new appeal into database",
                    "content": {
                        "application\/json": {
                            "schema": {
                                "$ref": "#\/components\/schemas\/Appeal"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Appeal created"
                    },
                    "422": {
                        "description": "Unprocessable Entity",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The email must be a valid email address."
                                        },
                                        "errors": {
                                            "type": "array",
                                            "example": {
                                                "email": "The email must be a valid email address.",
                                                "name": "Name field is required"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "\/api\/register": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "register",
                "requestBody": {
                    "description": "Login",
                    "content": {
                        "application\/json": {
                            "schema": {
                                "$ref": "#\/components\/schemas\/User"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Unprocessable Entity",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "errors": {
                                            "type": "array",
                                            "example": [
                                                "Неверный логин или пароль"
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "\/api\/login": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "login",
                "requestBody": {
                    "description": "Login",
                    "content": {
                        "application\/json": {
                            "schema": {
                                "$ref": "#\/components\/schemas\/User"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Unprocessable Entity",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "errors": {
                                            "type": "array",
                                            "example": [
                                                "Неверный логин или пароль"
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Appeal": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "phone": {
                        "type": "string",
                        "nullable": true
                    },
                    "email": {
                        "type": "string",
                        "nullable": true
                    },
                    "message": {
                        "type": "string"
                    }
                }
            },
            "News": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "slug": {
                        "type": "string"
                    },
                    "text": {
                        "type": "string"
                    },
                    "published_at": {
                        "format": "date-time",
                        "type": "string"
                    }
                }
            },
            "Page": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "slug": {
                        "type": "string"
                    },
                    "text": {
                        "type": "string"
                    }
                }
            },
            "PaginatorLinks": {
                "type": "object",
                "properties": {
                    "first": {
                        "type": "string"
                    },
                    "last": {
                        "type": "string"
                    },
                    "prev": {
                        "type": "string",
                        "nullable": true
                    },
                    "next": {
                        "type": "string",
                        "nullable": true
                    }
                }
            },
            "PaginatorMeta": {
                "type": "object",
                "properties": {
                    "current_page": {
                        "type": "integer"
                    },
                    "from": {
                        "type": "integer"
                    },
                    "last_page": {
                        "type": "integer"
                    },
                    "path": {
                        "type": "integer"
                    },
                    "per_page": {
                        "type": "integer"
                    },
                    "to": {
                        "type": "integer"
                    },
                    "total": {
                        "type": "integer"
                    },
                    "links": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "url": {
                                    "type": "string",
                                    "nullable": true
                                },
                                "label": {
                                    "type": "string"
                                },
                                "active": {
                                    "type": "boolean"
                                }
                            }
                        }
                    }
                }
            },
            "User": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "news",
            "description": "News"
        },
        {
            "name": "pages",
            "description": "Pages"
        }
    ]
}
